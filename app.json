{
  "expo": {
    "name": "Pi√±ata",
    "slug": "pinata",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/appstore.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pinata.learning",
      "config": {
        "usesAppleSignIn": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ],
      "package": "com.pinata.learning"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "pinata",
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let us add vocabulary tags to your chosen photos.",
          "cameraPermission": "The app accesses your camera to let you capture moments and to let us add vocabulary tags to your photos."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-font",
      [
        "expo-apple-authentication",
        {
          "mode": "development"
        }
      ],
      "expo-splash-screen"
    ],
    "fonts": [
      {
        "asset": "./assets/fonts/Pacifico-Regular.ttf",
        "family": "Pacifico"
      }
    ]
  }
}
